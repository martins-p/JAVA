import java.util.Scanner;

public class BasicMath {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		System.out.print("Ludzu, ievadi veselu skaitli: ");
		int a = scanner.nextInt();
		System.out.print("Ludzu, ievadi decimalskaitli (ar komatu): ");
		double b = scanner.nextDouble();
		System.out.printf("Skaitlu %d un %f summa ir %f", a, b,a+b);
		System.out.printf("Skaitlu %d un %f starpiba ir %f", a, b,a-b);
		System.out.printf("Skaitlu %d un %f reizinajums ir %f", a, b,a*b);
		System.out.printf("Skaitlu %d un %f dalijums ir %f", a, b,a/b);
		System.out.printf("Skaitlu %d un %f summas kvadrats ir %f", a, b,(a+b)*(a+b));

	}

}
